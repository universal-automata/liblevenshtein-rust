# Maintainer: F1R3FLY.io <noreply@f1r3fly.io>
# NOTE: This PKGBUILD is for tagged releases
pkgname=liblevenshtein
pkgver=0.3.0
pkgrel=1
pkgdesc="Fast approximate string matching using Levenshtein automata"
arch=('x86_64' 'aarch64')
url="https://github.com/universal-automata/liblevenshtein-rust"
license=('Apache')
depends=('gcc-libs')
makedepends=('rust' 'cargo' 'protobuf')
source=("liblevenshtein::git+https://github.com/universal-automata/liblevenshtein-rust.git#tag=v${pkgver}")
sha256sums=('SKIP')

build() {
    cd "$srcdir/liblevenshtein"
    export CARGO_TARGET_DIR=target

    # Determine RUSTFLAGS based on architecture
    if [ "$CARCH" = "x86_64" ]; then
        export RUSTFLAGS="-C target-feature=+aes,+sse2"
    elif [ "$CARCH" = "aarch64" ]; then
        export RUSTFLAGS="-C target-feature=+aes,+neon"
    fi

    cargo build --release --lib --all-features --locked
    cargo build --release --bin liblevenshtein --features cli,compression,protobuf --locked
}

check() {
    cd "$srcdir/liblevenshtein"

    # Determine RUSTFLAGS based on architecture
    if [ "$CARCH" = "x86_64" ]; then
        export RUSTFLAGS="-C target-feature=+aes,+sse2"
    elif [ "$CARCH" = "aarch64" ]; then
        export RUSTFLAGS="-C target-feature=+aes,+neon"
    fi

    cargo test --release --all-features --locked
}

package() {
    cd "$srcdir/liblevenshtein"

    # Install binary
    install -Dm755 "target/release/liblevenshtein" "$pkgdir/usr/bin/liblevenshtein"

    # Install libraries
    install -Dm644 "target/release/libliblevenshtein.rlib" "$pkgdir/usr/lib/libliblevenshtein.rlib"

    # Install shared library (Linux)
    if [ -f "target/release/libliblevenshtein.so" ]; then
        install -Dm644 "target/release/libliblevenshtein.so" "$pkgdir/usr/lib/libliblevenshtein.so"
    fi

    # Install license and documentation
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    install -Dm644 CHANGELOG.md "$pkgdir/usr/share/doc/$pkgname/CHANGELOG.md"

    # Install examples
    mkdir -p "$pkgdir/usr/share/doc/$pkgname/examples"
    cp -r examples/*.rs "$pkgdir/usr/share/doc/$pkgname/examples/" 2>/dev/null || true
}
